# AwaazTwin â€“ Environment Variables
# Copy to .env and adjust values for your environment.
# ============================================================================

# ---------- Postgres ----------
POSTGRES_PASSWORD=postgres

# ---------- AwaazTwin Backend ----------
AWAAZTWIN_DB_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/awaaztwin
AWAAZTWIN_REDIS_URL=redis://redis:6379/0
AWAAZTWIN_SERVER_HOST=0.0.0.0
AWAAZTWIN_SERVER_PORT=8000
AWAAZTWIN_SERVER_LOG_LEVEL=info

# ---------- Storage (MinIO) ----------
AWAAZTWIN_STORAGE_ENDPOINT=http://minio:9000
AWAAZTWIN_STORAGE_ACCESS_KEY=minioadmin
AWAAZTWIN_STORAGE_SECRET_KEY=minioadmin
AWAAZTWIN_STORAGE_BUCKET=awaaztwin
AWAAZTWIN_STORAGE_REGION=us-east-1
AWAAZTWIN_STORAGE_SECURE=false

# ---------- MinIO root credentials ----------
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin

# ---------- TTS Engine ----------
DEFAULT_ENGINE=xtts-hindi

# ---------- Exposed ports (optional overrides) ----------
API_PORT=8000
PORTAL_PORT=3000
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
